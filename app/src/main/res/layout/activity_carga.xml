<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.CargaActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ico_logoiglesia"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/logoiglesia"/>

        <TextView
            android:id="@+id/app_name"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- nombre del desarrollador -->
        <TextView
            android:id="@+id/desarrollador"
            android:text="@string/desarrollador"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#5C5B5B"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Animacion de la pagina lottie        -->
        <!-- Lottie: https://lottiefiles.com/ -->

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="carga_animacion_2.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>