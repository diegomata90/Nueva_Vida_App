<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    tool:cardBackgroundColor="@color/backgroud_RV"
    tool:cardCornerRadius="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Imagen -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageVideo"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_ico" />

        <!-- Contenedor texto -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <!-- Titulo-->
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvTituloVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/Videotitulo" />


        <!-- Descripción -->
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvDesVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/VideoDescrip" />



    </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>