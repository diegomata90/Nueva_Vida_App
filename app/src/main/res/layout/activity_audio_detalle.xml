<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Reproductor en curso-->
    <!-- Contenedor del imagen y titulo en curso-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <!-- Imagen Cover-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagen_Covered"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/btn_personalizado" />

        <!-- Titulo del audio-->
        <TextView
            android:id="@+id/TituloAudioReproduct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:marqueeRepeatLimit="1"
            android:textAppearance="@style/MarqueeText"
            android:textColor="@color/red2_app"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="@string/TituloAudio" />

        <!-- Barra de avance del audio-->
        <SeekBar
            android:id="@+id/progress_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:contentDescription="@string/contentDescBARAvance"
            tools:progress="0"/>

        <!-- Contenedor del tiempo avance del audio-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/audio_time_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                tools:text="00:00" />

            <TextView
                android:id="@+id/audio_time_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="02:00" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Contenedor del tiempo avance del audio-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Boton de play-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/play_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="start"
                android:src="@drawable/ic_play"
                android:visibility="visible"
                android:contentDescription="@string/contentDescBTNPlay"/>

            <!-- Boton de pausa-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/pause_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="start"
                android:src="@drawable/ic_pause"
                android:visibility="gone"
                android:contentDescription="@string/contentDescBTNPause"/>

            <!-- Icono de audio -->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end|center"
                android:layout_weight="1"
                android:src="@drawable/ic_volume"
                android:contentDescription="@string/contentDescICOVolumen"/>

            <SeekBar
                android:id="@+id/volume_seek_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="end"
                android:contentDescription="@string/contentDescBARVolumen"/>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/AudioListaTXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/AudioListaTXT"
            android:textColor="#000000"
            android:textSize="20sp" />


        <!-- Lista de los audios RecyclerView-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/audio_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>