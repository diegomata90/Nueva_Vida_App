<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Reproductor en curso-->
    <!-- Contenedor del imagen y titulo en curso-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- Imagen Cover-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagen_Covered"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/btn_personalizado" />

        <!-- Titulo del audio-->
        <TextView
            android:id="@+id/TituloAudioReproduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:paddingStart="5dp"
            android:textColor="#989494"
            android:textSize="20sp"
            android:textStyle="bold"
            style="@style/MarqueeText"
            tools:text="@string/TituloAudio" />

        <!-- Barra de avance del audio-->
        <SeekBar
            android:id="@+id/progress_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <!-- Contenedor del tiempo avance del audio-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/audio_time_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="00:00" />

            <TextView
                android:id="@+id/audio_time_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="02:00" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Contenedor del tiempo avance del audio-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Boton de play-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/play_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="start"
                android:visibility="visible"
                android:src="@drawable/ic_play" />

            <!-- Boton de pausa-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/pause_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="start"
                android:visibility="gone"
                android:src="@drawable/ic_pause" />

            <!-- Icono de audio -->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_volume"
                android:layout_gravity="end|center" />

            <SeekBar
                android:id="@+id/volume_seek_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="end" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>




    <!-- Lista de los audios RecyclerView-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audio_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>