<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Nueva_Vida_App" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_app</item>
        <item name="colorPrimaryDark">@color/red2_app</item>
        <item name="colorAccent">@color/red_app</item>

    </style>

    <style name="Nueva_Vida_App.NoActionBar">
        <!-- Desactiva el ActionBAR. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menuApp">
        <item name="android:textColor">@color/textcolor_rv</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Stylo para que las letras de las canciones se muevan -->
    <style name="MarqueeText" parent="TextAppearance.AppCompat">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="BibliaComponent" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Otros atributos de estilo -->
        <item name="colorPrimary">@color/red_app</item>
        <item name="colorPrimaryDark">@color/red2_app</item>
        <item name="colorAccent">@color/red_app</item>
    </style>

</resources>