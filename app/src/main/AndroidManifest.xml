<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- PERMISO PARA NOTIFICAR -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- LEER ALMACENAMIENTO EXTERNO -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ico_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Nueva_Vida_App"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.OtrasCategorias.ContenidoCategoriasActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.OtrasCategorias.OtrasCategoriasActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.AudioA.AudioaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.AudioA.AudioAgregarActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.Biblia.BibliaActivity"
            android:exported="false"
            android:theme="@style/BibliaComponent" />
        <activity
            android:name=".ui.view.Audio.AudioDetalleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.Audio.AudioActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.EventoA.EventoaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.EventoA.EventoAgregarActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.Evento.EventoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.InicioSesion"
            android:exported="false" />
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="false"
            android:theme="@style/Nueva_Vida_App.NoActionBar" />
        <activity
            android:name=".ui.view.MainActivityAdmin"
            android:exported="false"
            android:theme="@style/Nueva_Vida_App.NoActionBar" />
        <activity
            android:name=".ui.view.CargaActivity"
            android:exported="true"
            android:theme="@style/Nueva_Vida_App.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".core.notification.MyFirebaseNotificationServer"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!--
 Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_noti" />
        <!--
 Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/red2_app" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
    </application>

</manifest>